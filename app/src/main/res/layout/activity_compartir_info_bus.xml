<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/verdeFondo">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"    >
        <ImageButton
            android:onClick="BtnReportTransmiVeryFull"
            android:id="@+id/BtnTransmiFull"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:text="@string/BtnTransmiFull"
            android:src="@drawable/lleno_icon" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LLENO"
            android:textSize="20dp"
            android:textColor="@color/verdeColaborar"
            android:textStyle="bold"
            />
        <ImageButton
            android:onClick="BtnReportTransmiVeryNormal"
            android:id="@+id/BtnTransmiNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/BtnTransmiNormal"
            android:layout_weight="1"
            android:src="@drawable/normal_icon"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APENAS"
            android:textSize="20dp"
            android:textColor="@color/verdeColaborar"
            android:textStyle="bold"
            />
        <ImageButton
            android:onClick="BtnReportTransmiVoid"
            android:id="@+id/BtnTransmiVoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/BtnTransmiVoid"
            android:layout_weight="1"
            android:src="@drawable/vacio_icon"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡¡VA VACIO!!"
            android:textSize="20dp"
            android:textColor="@color/verdeColaborar"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>
